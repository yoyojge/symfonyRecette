    <h1>Recette index</h1>   
    


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width:450px;">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>





    <div class="carousel-inner">



        {% for recette in recettes|slice(0, 3) %}
            
            <div class="carousel-item {% if loop.index  == 1 %} active {% endif %} ">
                <img class="d-block w-100" src="img/bg{{ loop.index }}.jpg" alt="slide {{ loop.index }}">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="background-color:#009EE0;opacity: 0.6;">
                        {{ loop.index }}- {{ recette.titre }}
                    </h5>
                    <p style="background-color:#009EE0;opacity: 0.6;">{{ recette.description }}</p>
                </div>
            </div>
            
        {% else %}
            <div>no records found</div>
        {% endfor %}






